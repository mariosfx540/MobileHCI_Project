        <Button
            android:id="@+id/btnSpeak2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/round_mic"
            android:text=""
            android:clickable="true"
            />

    </LinearLayout>



</RelativeLayout>



