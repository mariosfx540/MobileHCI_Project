<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear2"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Hello ------> Здравствуйте"
            android:gravity="left"/>

        <ImageView
            android:id="@+id/micro_tab"
            android:src="@drawable/listening"
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linear3"
                android:layout_below="@id/linear2"
                android:padding="16dp"
                android:layout_marginTop="10dp"
                android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="20dp"
                android:text="Good Night ------> доброй ночи"
                android:gravity="left"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/micro_tab2"
                android:src="@drawable/listening"
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                />


        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear4"
        android:layout_below="@id/linear3"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        android:clickable="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:textSize="20dp"
            android:text="Thank you ------> Спасибо"
            android:textStyle="bold"
            android:gravity="left"/>

        <ImageView
            android:id="@+id/micro_tab3"
            android:src="@drawable/listening"
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear5"
        android:layout_below="@id/linear4"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:textSize="20dp"
            android:text="Good Morning ------> доброе утро"
            android:gravity="left"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/micro_tab4"
            android:src="@drawable/listening"
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:id="@+id/linear6"
        android:layout_below="@id/linear5"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:layout_marginTop="10dp">

